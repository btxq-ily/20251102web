@{
    ViewData["Title"] = "首页";
    var recentPosts = ViewBag.RecentPosts as IEnumerable<KnowledgeStack.Web.Models.Post> ?? Enumerable.Empty<KnowledgeStack.Web.Models.Post>();
}
<div class="container py-4">
    <div class="p-5 mb-4 rounded-3" style="background-color: #6366f1; background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%); box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <div class="text-center">
            <i class="bi bi-journal-code display-1 text-white"></i>
            <h1 class="display-5 fw-bold mt-3 text-white">我的知识小栈</h1>
            <p class="lead text-white" style="font-size: 1.25rem;">记录、分享与成长 - 你的个人博客与笔记平台</p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="alert alert-light mt-3 d-inline-block">
                    <i class="bi bi-person-check-fill text-success"></i> 欢迎回来，<strong>@User.Identity!.Name</strong>
                </div>
            }
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text display-4 text-primary"></i>
                    <h3 class="mt-3">@ViewBag.TotalPosts</h3>
                    <p class="text-muted">文章总数</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people display-4 text-success"></i>
                    <h3 class="mt-3">@ViewBag.TotalUsers</h3>
                    <p class="text-muted">注册用户</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-rocket-takeoff display-4 text-warning"></i>
                    <h3 class="mt-3">快速开始</h3>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-primary mt-2" asp-controller="Posts" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> 新建文章
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-primary mt-2" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus"></i> 立即注册
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> 最新文章</h5>
                </div>
                <div class="card-body">
                    @if (recentPosts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var p in recentPosts)
                            {
                                <a class="list-group-item list-group-item-action" asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@p.Title</h6>
                                        <small class="text-muted">@p.CreatedAt.ToLocalTime().ToString("MM-dd")</small>
                                    </div>
                                    <small class="text-muted"><i class="bi bi-person"></i> @p.User!.Username</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">暂无文章</p>
                    }
                    <div class="text-center mt-3">
                        <a class="btn btn-outline-primary" asp-controller="Posts" asp-action="Index">
                            查看全部文章 <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-lightning-fill text-warning"></i> 快速入口</h5>
                    <div class="d-grid gap-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a class="btn btn-success" asp-controller="Posts" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> 新建文章
                            </a>
                            <a class="btn btn-outline-primary" asp-controller="Profile" asp-action="Index">
                                <i class="bi bi-person"></i> 个人中心
                            </a>
                            <a class="btn btn-outline-secondary" asp-controller="Tags" asp-action="Index">
                                <i class="bi bi-tags"></i> 管理标签
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> 登录
                            </a>
                            <a class="btn btn-success" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> 注册账号
                            </a>
                        }
                        <a class="btn btn-outline-info" asp-controller="Posts" asp-action="Index">
                            <i class="bi bi-search"></i> 浏览文章
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h6 class="card-subtitle mb-3 text-primary"><i class="bi bi-info-circle"></i> 功能特性</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> Markdown 写作</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> 图片上传</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> 标签分类</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> 评论互动</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success"></i> 点赞功能</li>
                        <li><i class="bi bi-check-circle-fill text-success"></i> 全文搜索</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

