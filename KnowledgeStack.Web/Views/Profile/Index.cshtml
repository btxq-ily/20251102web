@model KnowledgeStack.Web.Models.User
@{
    ViewData["Title"] = "个人中心";
}
<div class="container py-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                    </div>
                    <h4 class="card-title">@Model.Username</h4>
                    <p class="text-muted">@Model.Email</p>
                    <small class="text-muted">注册时间：@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</small>
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-body">
                    <h6 class="card-subtitle mb-3 text-muted">统计信息</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="bi bi-file-text"></i> 发表文章</span>
                        <strong class="text-primary">@ViewBag.TotalPosts</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span><i class="bi bi-chat-dots"></i> 评论数</span>
                        <strong class="text-info">@ViewBag.TotalComments</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-hand-thumbs-up"></i> 点赞数</span>
                        <strong class="text-warning">@ViewBag.TotalLikes</strong>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-journal-text"></i> 我的文章</h5>
                </div>
                <div class="card-body">
                    @if (Model.Posts.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var p in Model.Posts)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6>
                                                <a class="text-decoration-none" asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id">
                                                    @p.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                @p.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                                @if (p.PostTags.Any())
                                                {
                                                    <span class="ms-2">
                                                        @foreach (var t in p.PostTags.Take(3))
                                                        {
                                                            <span class="badge bg-secondary">@t.Tag!.Name</span>
                                                        }
                                                    </span>
                                                }
                                            </small>
                                        </div>
                                        <div>
                                            <a class="btn btn-sm btn-outline-primary" asp-controller="Posts" asp-action="Edit" asp-route-id="@p.Id">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a class="btn btn-outline-primary" asp-controller="Posts" asp-action="Index">查看全部文章</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-inbox display-4"></i>
                            <p class="mt-2">你还没有发表文章</p>
                            <a class="btn btn-primary" asp-controller="Posts" asp-action="Create">写第一篇</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

