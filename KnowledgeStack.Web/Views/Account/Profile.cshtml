@model KnowledgeStack.Web.Models.User
@{
    ViewData["Title"] = "个人中心";
}
<div class="container py-4">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle display-1 text-primary"></i>
                    <h4 class="mt-3">@Model.Username</h4>
                    <p class="text-muted mb-1"><i class="bi bi-envelope"></i> @Model.Email</p>
                    <p class="text-muted small">
                        <i class="bi bi-calendar-check"></i> 注册于 @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")
                    </p>
                </div>
            </div>
            
            <div class="card shadow mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-bar-chart"></i> 统计数据</h6>
                </div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-file-text"></i> 发表文章</span>
                        <span class="badge bg-primary rounded-pill">@Model.Posts.Count</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-chat-left-text"></i> 发表评论</span>
                        <span class="badge bg-success rounded-pill">@Model.Comments.Count</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-heart"></i> 点赞总数</span>
                        <span class="badge bg-danger rounded-pill">@Model.Likes.Count</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-journal"></i> 我的文章</h5>
                    <a class="btn btn-sm btn-primary" asp-controller="Posts" asp-action="Create">
                        <i class="bi bi-plus"></i> 新建
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Posts.Any())
                    {
                        <div class="list-group">
                            @foreach (var p in Model.Posts.OrderByDescending(x => x.CreatedAt).Take(10))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none">
                                                    @p.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar3"></i> @p.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                                                @if (p.UpdatedAt.HasValue)
                                                {
                                                    <span class="ms-2"><i class="bi bi-pencil"></i> 已编辑</span>
                                                }
                                            </small>
                                            <div class="mt-1">
                                                @foreach (var t in p.PostTags.Select(pt => pt.Tag))
                                                {
                                                    <span class="badge bg-secondary me-1">@t!.Name</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <a class="btn btn-outline-primary" asp-controller="Posts" asp-action="Edit" asp-route-id="@p.Id">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-outline-danger" asp-controller="Posts" asp-action="Delete" asp-route-id="@p.Id">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Posts.Count > 10)
                        {
                            <div class="text-center mt-3">
                                <a class="btn btn-link" asp-controller="Posts" asp-action="Index">查看全部文章</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-inbox display-4"></i>
                            <p class="mt-2">还没有发表文章</p>
                            <a class="btn btn-primary" asp-controller="Posts" asp-action="Create">写第一篇</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

