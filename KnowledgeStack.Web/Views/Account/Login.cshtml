@{
    ViewData["Title"] = "登录";
}
<div class="container py-5" style="max-width:480px;">
    <div class="card shadow">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <i class="bi bi-box-arrow-in-right display-4 text-primary"></i>
                <h2 class="mt-3">用户登录</h2>
                <p class="text-muted">登录到你的知识小栈</p>
            </div>
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-person"></i> 用户名或邮箱</label>
                    <input class="form-control form-control-lg" name="identifier" placeholder="输入用户名或邮箱" required />
                </div>
                <div class="mb-3">
                    <label class="form-label"><i class="bi bi-lock"></i> 密码</label>
                    <input type="password" class="form-control form-control-lg" name="password" placeholder="输入密码" required />
                </div>
                <button class="btn btn-primary btn-lg w-100" type="submit">
                    <i class="bi bi-check-circle"></i> 登录
                </button>
            </form>
            <div class="text-danger mt-3">@Html.ValidationSummary()</div>
            <hr class="my-4">
            <div class="text-center">
                <small class="text-muted">还没有账号？</small>
                <a asp-action="Register" class="btn btn-link">立即注册</a>
            </div>
        </div>
    </div>
</div>



