@model KnowledgeStack.Web.Models.Post
@{
    ViewData["Title"] = "删除文章";
}
<div class="container py-4" style="max-width:600px;">
    <div class="alert alert-danger">
        <h4 class="alert-heading">确认删除？</h4>
        <p>你确定要删除文章 <strong>@Model.Title</strong> 吗？</p>
        <p class="mb-0 small text-muted">此操作不可撤销，文章及其所有评论都将被删除。</p>
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger" onclick="return confirm('确定删除吗？');">确认删除</button>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.Id">取消</a>
    </form>
</div>
