@{
    ViewData["Title"] = "新建文章";
}
<div class="container py-4" style="max-width:900px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> 新建文章</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">标题 *</label>
                    <input class="form-control form-control-lg" name="title" placeholder="输入文章标题" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">内容 (支持 Markdown) *</label>
                    <div class="alert alert-info small mb-2">
                        <i class="bi bi-info-circle"></i> 支持 Markdown 语法：<code>**粗体**</code> <code>*斜体*</code> <code># 标题</code> <code>[链接](url)</code> <code>![图片](url)</code>
                    </div>
                    <div class="mb-2">
                        <label class="btn btn-sm btn-outline-secondary" for="imageUpload">
                            <i class="bi bi-image"></i> 上传图片
                        </label>
                        <input type="file" id="imageUpload" accept="image/*" style="display:none;" />
                        <small class="text-muted ms-2" id="uploadStatus"></small>
                    </div>
                    <textarea id="contentArea" name="content" rows="15" class="form-control font-monospace" placeholder="# 标题&#10;&#10;这是内容..."></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">标签</label>
                    <div class="d-flex flex-wrap gap-2 border rounded p-3">
                        @if (((IEnumerable<KnowledgeStack.Web.Models.Tag>)ViewBag.AllTags).Any())
                        {
                            @foreach (var t in (IEnumerable<KnowledgeStack.Web.Models.Tag>)ViewBag.AllTags)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="tags" value="@t.Id" id="tag@(t.Id)" />
                                    <label class="form-check-label" for="tag@(t.Id)">@t.Name</label>
                                </div>
                            }
                        }
                        else
                        {
                            <small class="text-muted">暂无标签，请先到<a asp-controller="Tags" asp-action="Index">标签管理</a>创建</small>
                        }
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-success px-4" type="submit">
                        <i class="bi bi-check-circle"></i> 发布文章
                    </button>
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        <i class="bi bi-x-circle"></i> 取消
                    </a>
                </div>
            </form>
            <div class="text-danger mt-3">@Html.ValidationSummary()</div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.getElementById('imageUpload')?.addEventListener('change', async function(e) {
    const file = e.target.files[0];
    if (!file) return;
    
    const status = document.getElementById('uploadStatus');
    status.textContent = '上传中...';
    
    const formData = new FormData();
    formData.append('file', file);
    
    try {
        const res = await fetch('/Upload/Image', { method: 'POST', body: formData });
        const data = await res.json();
        
        if (data.url) {
            const textarea = document.getElementById('contentArea');
            const markdown = `![图片](${data.url})`;
            const pos = textarea.selectionStart;
            const before = textarea.value.substring(0, pos);
            const after = textarea.value.substring(pos);
            textarea.value = before + markdown + after;
            status.textContent = '✓ 上传成功';
            setTimeout(() => status.textContent = '', 3000);
        } else {
            status.textContent = '✗ ' + (data.error || '上传失败');
        }
    } catch(err) {
        status.textContent = '✗ 上传失败';
    }
});
</script>
}






