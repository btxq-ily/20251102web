@model KnowledgeStack.Web.Models.Post
@{
    ViewData["Title"] = Model.Title;
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">@Model.Title</h2>
        @if (User.Identity?.IsAuthenticated == true && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier) != null && int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)!.Value) == Model.UserId)
        {
            <div>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">编辑</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">删除</a>
            </div>
        }
    </div>
    <div class="text-muted mb-3">
        <small>作者：@Model.User!.Username · @Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
    </div>
    <div class="mb-3">
        @if (Model.PostTags.Any())
        {
            <span class="me-2">标签：</span>
            foreach (var pt in Model.PostTags)
            {
                <a href="/Posts?tag=@pt.TagId" class="badge text-bg-secondary text-decoration-none me-1">@pt.Tag!.Name</a>
            }
        }
    </div>
    <article class="border rounded p-4 mb-4 bg-white">
        @Html.Raw(ViewBag.Html)
    </article>
    <div class="mb-4">
        <button class="btn btn-outline-primary" id="likeBtn" data-id="@Model.Id">
            <i class="bi bi-hand-thumbs-up"></i> 点赞 <span id="likeCount" class="badge text-bg-primary">@ViewBag.Likes</span>
        </button>
    </div>
    <section>
        <h5 class="mb-3">评论 (@Model.Comments.Count)</h5>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <form class="mb-4" asp-action="AddComment" method="post">
                <input type="hidden" name="postId" value="@Model.Id" />
                <div class="mb-2">
                    <textarea class="form-control" rows="3" name="content" placeholder="写下你的看法..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-chat-dots"></i> 发表评论
                </button>
            </form>
        }
        else
        {
            <p class="text-muted"><a asp-controller="Account" asp-action="Login">登录</a> 后可发表评论</p>
        }
        <ul class="list-group">
            @foreach (var c in Model.Comments.OrderByDescending(x=>x.CreatedAt))
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="small text-muted mb-1">@c.User!.Username · @c.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                            <div>@c.Content</div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </section>
</div>

<script>
document.getElementById('likeBtn')?.addEventListener('click', async (e) => {
  const btn = e.currentTarget;
  const id = btn.dataset.id;
  try {
    const res = await fetch(`/Posts/Like/${id}`, { method: 'POST' });
    const data = await res.json();
    if (data.ok) {
      document.getElementById('likeCount').innerText = data.likes;
      btn.classList.add('btn-primary');
      btn.classList.remove('btn-outline-primary');
    }
  } catch (err) {
    console.error('点赞失败', err);
  }
});
</script>
