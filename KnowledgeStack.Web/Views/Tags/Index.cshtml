@model IEnumerable<KnowledgeStack.Web.Models.Tag>
@{
    ViewData["Title"] = "标签管理";
}
<div class="container py-4" style="max-width:800px;">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-tags-fill"></i> 标签管理</h4>
        </div>
        <div class="card-body">
            <form class="input-group mb-4" method="post" asp-action="Create">
                <input class="form-control form-control-lg" name="name" placeholder="输入新标签名称" required />
                <button class="btn btn-primary px-4" type="submit">
                    <i class="bi bi-plus-circle"></i> 添加
                </button>
            </form>

            @if (Model.Any())
            {
                <div class="row g-3">
                    @foreach (var t in Model)
                    {
                        <div class="col-md-6">
                            <div class="card border-secondary">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">
                                            <span class="badge bg-secondary fs-6">@t.Name</span>
                                        </h6>
                                    </div>
                                    <form method="post" asp-action="Delete" asp-route-id="@t.Id" class="d-inline" onsubmit="return confirm('确定删除标签【@t.Name】吗？仅未被使用的标签可删除。');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-2">还没有标签，创建第一个吧</p>
                </div>
            }
        </div>
    </div>
</div>
